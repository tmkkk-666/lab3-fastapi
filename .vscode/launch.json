{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "FASTAPI_ENV": "development"
      },
      "cwd": "${workspaceFolder}",
      "justMyCode": true,
      "autoReload": true
    }
  ]
}